<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_500"
    tools:context=".activity.MyProfile">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:elevation="12dp"
        app:cardCornerRadius="55dp"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView

            android:layout_height="120dp"
            android:layout_width="match_parent"
            android:id="@+id/imgProfile"
            android:src="@drawable/ic_person_filled"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/txtName"
            android:layout_weight="4.2"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:visibility="gone"
            android:maxLength="15"
            android:textSize="30sp"
            android:textAlignment="center"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/imgDone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/ic_done"
            android:background="@color/white"
            />

        <EditText
            android:id="@+id/etName"
            android:layout_weight="4.2"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="DeliveryAddress"
            android:maxLength="15"
            android:textSize="30sp"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/ic_edit"
            android:background="@color/white"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llName"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/txtPhone"
            android:layout_weight="4.2"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:visibility="gone"
            android:maxLength="15"
            android:textSize="30sp"
            android:textAlignment="center"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/imgDonePh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/ic_done"
            android:background="@color/white"
            />

        <EditText
            android:id="@+id/etPhone"
            android:layout_weight="4.2"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Phone Number"
            android:maxLength="15"
            android:textSize="30sp"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/imgEditPh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/ic_edit"
            android:background="@color/white"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llPhoneNumber"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/txtEmail"
            android:layout_weight="4.2"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:visibility="gone"
            android:maxLength="15"
            android:textSize="30sp"
            android:textAlignment="center"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/imgDoneEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/ic_done"
            android:background="@color/white"
            />

        <EditText
            android:id="@+id/etEmail"
            android:layout_weight="4.2"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Email"
            android:maxLength="15"
            android:textSize="30sp"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/imgEditEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/ic_edit"
            android:background="@color/white"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llEmail"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/txtAdd"
            android:layout_weight="4.2"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:visibility="gone"
            android:maxLength="15"
            android:textSize="30sp"
            android:textAlignment="center"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/imgDoneAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/ic_done"
            android:background="@color/white"
            />

        <EditText
            android:id="@+id/etAdd"
            android:layout_weight="4.2"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="Name"
            android:maxLength="15"
            android:textSize="30sp"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/imgEditAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/ic_edit"
            android:background="@color/white"
            />


    </LinearLayout>

</RelativeLayout>