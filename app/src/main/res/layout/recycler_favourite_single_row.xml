<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_margin="2dp"
        >

        <ImageView
            android:id="@+id/imgResImageFav"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1.8"
            android:src="@mipmap/ic_launcher"
            android:padding="5dp"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            >

            <TextView
                android:id="@+id/txtResNameFav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dish Name"
                android:textSize="18sp"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtResPriceFav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="280/person"
                android:layout_below="@+id/txtResNameFav"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_euro"

                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            >

            <ImageView
                android:id="@+id/imgSelectFavouriteFav"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_favourite_filled"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                />

            <TextView
                android:id="@+id/txtResRatingsFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgSelectFavouriteFav"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="21dp"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="3.5"
                android:textColor="@color/rating_color"
                />



        </RelativeLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>